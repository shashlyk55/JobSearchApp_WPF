<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Window" x:Key="WindowStyle">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style TargetType="Border" x:Key="ContainerStyle">
        <Setter Property="Background" Value="#282c34"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style TargetType="Window" x:Key="PopapStyles">
        <Setter Property="Background" Value="#282c34"/>
    </Style>
    
    <Style TargetType="Button" x:Key="NavButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="30"/>
    </Style>

    <Style TargetType="Label" x:Key="Title">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="10 0 0 0"/>
    </Style>

    <Style TargetType="Border" x:Key="WindowNavbar">
        <Setter Property="Background" Value="#121217"/>
        <Setter Property="CornerRadius" Value="10 10 0 0"/>
    </Style>
</ResourceDictionary>